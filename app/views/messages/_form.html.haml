= form_for @message do |f|
  -if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :is_guest
    = f.check_box :is_guest
  .field
    = f.label :guest_name
    = f.text_field :guest_name
  .field
    = f.label :guest_email
    = f.text_field :guest_email
  .actions
    = f.submit 'Save'

- if user_signed_in?
  #header
    #welcome.swing
      %span
        = ENV["APP_NAME"]
        = link_to "Home", homes_path
      %span
        = link_to "Movie Reviews", reviews_path
      %span
        = link_to "Photos", albums_path
      %span
        = link_to "Public Chat", root_url(subdomain: "chat")

      #sign_info
        %span#username
          = current_user.username
        = link_to "Sign out", destroy_user_session_path, :method => :delete
- else
  /
    = link_to "Sign up", new_user_registration_path
    or #{link_to "sign in", new_user_session_path}
